<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiBeyond.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiBeyond"
    FlyoutBehavior="Flyout">
    <FlyoutItem
        Title="Landing Page">
        
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:LandingPage}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem
        Title="Flex Layout">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:FlexLayoutPage}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem
        Title="List View">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:ListViewPage}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem
        Title="Collection View">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:CollectionViewPage}" />
        </Tab>
    </FlyoutItem>
</Shell>
