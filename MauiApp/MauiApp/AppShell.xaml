<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiBeyond.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiBeyond"
    Shell.FlyoutBehavior="Flyout">
    <FlyoutItem Title="Grid">
        <ShellContent ContentTemplate="{DataTemplate local:GridPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Stack">    
        <ShellContent ContentTemplate="{DataTemplate local:StackPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Flex">
       <ShellContent ContentTemplate="{DataTemplate local:FlexPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Flex List">
        <ShellContent ContentTemplate="{DataTemplate local:FlexListPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Absolute">
        <ShellContent ContentTemplate="{DataTemplate local:AbsolutePage}" />
    </FlyoutItem>
    <FlyoutItem Title="Table View">
        <ShellContent ContentTemplate="{DataTemplate local:TableViewPage}" />
    </FlyoutItem>
</Shell>
