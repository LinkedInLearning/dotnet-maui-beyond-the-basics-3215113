<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBeyond.FlexPage"
             Title="Flex"
             BackgroundColor="DarkGray">
    <FlexLayout Direction="Column" AlignContent="Start">
        <Label FlexLayout.Basis="40" Text="Profile" />
        <FlexLayout Direction="Row" FlexLayout.Basis="80" Wrap="NoWrap">
            <Image FlexLayout.Basis="160" HeightRequest="80" Source="person_outline_black_24dp.svg"/>
            <FlexLayout Direction="Column" FlexLayout.Grow="1" Wrap="NoWrap">
                <Label FlexLayout.Grow=".5" Text="Name" />
                <Label FlexLayout.Grow=".5" Text="Title" />
            </FlexLayout>
        </FlexLayout>
        <FlexLayout Direction="Row" Padding="0,10,0,0" FlexLayout.Basis="40" Wrap="NoWrap" >
            <Label HeightRequest="30" FlexLayout.Basis="70" Text="Address:" />
            <Label HeightRequest="30" FlexLayout.Grow="1" Text="123 Fictional Drive" />
        </FlexLayout>
        <Label FlexLayout.Basis="30" Padding="70,0,0,0" Text="Apartment 1543" />
        <Label FlexLayout.Basis="30" Padding="70,0,0,0" Text="New York, NY 10005 USA" />
        <Button VerticalOptions="End" FlexLayout.Grow="1" HeightRequest="50" Text="Details"/>
    </FlexLayout>
</ContentPage>
