<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBeyond.MainViewPage"
             Title="MainView Page"
             Shell.NavBarHasShadow="true">
    <Grid RowDefinitions="450, *, 50">
        <Image Grid.Row="0" Source="trouble.jpg" HeightRequest="450" WidthRequest="400" HorizontalOptions="Center" VerticalOptions="Center" IsVisible="{Binding ImageRequired}" />
        <Button Grid.Row="2" Text="This is Trouble the cat." Command="{Binding ToggleImageRequiredCommand}" />
    </Grid>
</ContentPage>