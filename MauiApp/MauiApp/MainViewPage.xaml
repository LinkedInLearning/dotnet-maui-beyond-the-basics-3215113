<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:MauiBeyond.Views"
             xmlns:extensions="clr-namespace:MauiBeyond.Extensions"
             x:Class="MauiBeyond.MainViewPage"
             Title="MainView Page">
    <Grid ColumnDefinitions="100, *" RowDefinitions="50, 50, 50, 50, 50, 50, *">
        <views:TitleLabel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0" Text="{extensions:ResourceLoaderExtension ResourceFile=MauiBeyond.Prompts.resources, ResourceName=Address_Name}" VerticalTextAlignment="Center" x:FactoryMethod="CreateTitleLabel" />
        <views:RequiredEntry Grid.Row="0" Grid.Column="1" Text="{Binding Path=Name}" />
        <views:TitleLabel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0" Text="{extensions:ResourceLoaderExtension ResourceFile=MauiBeyond.Prompts.resources, ResourceName=Address_Title}" VerticalTextAlignment="Center" x:FactoryMethod="CreateTitleLabel" />
        <views:RequiredEntry Grid.Row="1" Grid.Column="1" Text="{Binding Path=Address1}" />
        <Entry Grid.Row="2" Grid.Column="1" Text="{Binding Path=Address2}" />
        <views:TitleLabel Grid.Row="3" Grid.Column="0" Margin="0,0,10,0" Text="{extensions:ResourceLoaderExtension ResourceFile=MauiBeyond.Prompts.resources, ResourceName=Address_City}" VerticalTextAlignment="Center" x:FactoryMethod="CreateTitleLabel" />
        <Entry Grid.Row="3" Grid.Column="1" Text="{Binding Path=City}" />
        <views:TitleLabel Grid.Row="4" Grid.Column="0" Margin="0,0,10,0" Text="{extensions:ResourceLoaderExtension ResourceFile=MauiBeyond.Prompts.resources, ResourceName=Address_State}" VerticalTextAlignment="Center" x:FactoryMethod="CreateTitleLabel" />
        <Entry Grid.Row="4" Grid.Column="1" Text="{Binding Path=State}" />
        <views:TitleLabel Grid.Row="5" Grid.Column="0" Margin="0,0,10,0" Text="{extensions:ResourceLoaderExtension ResourceFile=MauiBeyond.Prompts.resources, ResourceName=Address_PostalCode}" VerticalTextAlignment="Center" x:FactoryMethod="CreateTitleLabel" />
        <Entry Grid.Row="5" Grid.Column="1" Text="{Binding Path=State}" Keyboard="Numeric" />
    </Grid>
</ContentPage>