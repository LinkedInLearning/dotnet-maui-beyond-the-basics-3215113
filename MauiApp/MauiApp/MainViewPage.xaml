<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:MauiBeyond.Views"
             x:Class="MauiBeyond.MainViewPage"
             Title="MainView Page">
    <Grid ColumnDefinitions="100, *" RowDefinitions="50, 50, 50, 50, 50, 50, *">
        <Label Grid.Row="0" Grid.Column="0" Margin="0,0,10,0" Text="Name" VerticalTextAlignment="Center" />
        <views:RequiredEntry Grid.Row="0" Grid.Column="1" Text="{Binding Path=Name}" />
        <Label Grid.Row="1" Grid.Column="0" Text="Address:" Margin="0,0,10,0" VerticalTextAlignment="Center" />
        <views:RequiredEntry Grid.Row="1" Grid.Column="1" Text="{Binding Path=Address1}" />
        <Entry Grid.Row="2" Grid.Column="1" Text="{Binding Path=Address2}" />
        <Label Grid.Row="3" Grid.Column="0" Text="City:" Margin="0,0,10,0" VerticalTextAlignment="Center" />
        <Entry Grid.Row="3" Grid.Column="1" Text="{Binding Path=City}" />
        <Label Grid.Row="4" Grid.Column="0" Text="State:" Margin="0,0,10,0" VerticalTextAlignment="Center" />
        <Entry Grid.Row="4" Grid.Column="1" Text="{Binding Path=State}" />
        <Label Grid.Row="5" Grid.Column="0" Text="Postal Code:" Margin="0,0,10,0" VerticalTextAlignment="Center" />
        <Entry Grid.Row="5" Grid.Column="1" Text="{Binding Path=State}" Keyboard="Numeric" />
    </Grid>
</ContentPage>