<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MauiBeyond.ViewModels"
             x:Class="MauiBeyond.MainViewPage"
             Title="MainView Page"
             x:Name="MainView"
             Shell.NavBarHasShadow="true">
    <Grid RowDefinitions="30, 30, 30, *, 50" ColumnDefinitions="*">
        <Label Grid.Row="0" Grid.Column="0" Text="{Binding Path=Address.Address1}" />
        <Label Grid.Row="1" Grid.Column="0" Text="{Binding Path=Address.Address2}" />
        <Label Grid.Row="2" Grid.Column="0" Text="{Binding Path=Address.City}" />
        <Button Grid.Row="4" Grid.Column="0" Text="Refresh" Command="{Binding LoadAddressCommand}" />
    </Grid>
</ContentPage>