<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBeyond.CollectionViewPage"
             Title="CollectionView Page">
    <CollectionView ItemsSource="{Binding Names}" SelectionMode="None" 
                    RemainingItemsThreshold="20"
                    RemainingItemsThresholdReachedCommand="{Binding MoreDataCommand}" >
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="Black">
                    <Label Text="{Binding .}" />
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
