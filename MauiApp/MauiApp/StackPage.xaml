<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBeyond.StackPage"
             BackgroundColor="DarkGray"
             Title="Stack">
    <StackLayout VerticalOptions="Fill">
        <Label HeightRequest="40" Text="Profile" />
        <HorizontalStackLayout HeightRequest="80">
            <Image HeightRequest="80" WidthRequest="160" Source="person_outline_black_24dp.svg"/>
            <VerticalStackLayout HorizontalOptions="StartAndExpand">
                <Label HeightRequest="40" Text="Name" />
                <Label HeightRequest="40" Text="Title" />
            </VerticalStackLayout>
        </HorizontalStackLayout>
        <HorizontalStackLayout HeightRequest="40">
            <Label HeightRequest="40" Margin="0,10,0,0" Text="Address:" />
            <Label HeightRequest="40" Margin="10,10,0,0" Text="123 Fictional Drive" />
        </HorizontalStackLayout>
        <Label HeightRequest="30" Margin="70,0,0,0" Text="Apartment 1543" />
        <Label HeightRequest="30" Margin="70,0,0,0" Text="New York, NY 10005 USA" />
        <Button VerticalOptions="EndAndExpand" HeightRequest="50" Text="Details"/>
    </StackLayout>
</ContentPage>
